<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:jsp="http://java.sun.com/xml/ns/javaee/jsp" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>FinalProject</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <description></description>
    <display-name>Controller</display-name>
    <servlet-name>Controller</servlet-name>
    <servlet-class>by.epamtc.dubovik.shop.servlet.Controller</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Controller</servlet-name>
    <url-pattern>/Controller</url-pattern>
  </servlet-mapping>
  <jsp-config>
    <jsp-property-group>
      <url-pattern>*.jsp</url-pattern>
      <page-encoding>UTF-8</page-encoding>
    </jsp-property-group>
  </jsp-config>
  <filter>
    <display-name>SecurityFilter</display-name>
    <filter-name>SecurityFilter</filter-name>
    <filter-class>by.epamtc.dubovik.shop.servlet.filter.SecurityFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>SecurityFilter</filter-name>
    <url-pattern>/Controller</url-pattern>
  </filter-mapping>
  <filter>
    <display-name>PreviousRequestFilter</display-name>
    <filter-name>PreviousRequestFilter</filter-name>
    <filter-class>by.epamtc.dubovik.shop.servlet.filter.PreviousRequestFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>PreviousRequestFilter</filter-name>
    <url-pattern>/Controller</url-pattern>
  </filter-mapping>
  <filter>
    <display-name>CharsetFilter</display-name>
    <filter-name>CharsetFilter</filter-name>
    <filter-class>by.epamtc.dubovik.shop.servlet.filter.CharsetFilter</filter-class>
    <init-param>
      <param-name>characterEndoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>CharsetFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <display-name>CSRFFilter</display-name>
    <filter-name>CSRFFilter</filter-name>
    <filter-class>by.epamtc.dubovik.shop.servlet.filter.CSRFFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>CSRFFilter</filter-name>
    <url-pattern>/Controller</url-pattern>
  </filter-mapping>
  <filter>
    <display-name>LocaleFilter</display-name>
    <filter-name>LocaleFilter</filter-name>
    <filter-class>by.epamtc.dubovik.shop.servlet.filter.LocaleFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LocaleFilter</filter-name>
    <url-pattern>/Controller</url-pattern>
  </filter-mapping>
</web-app>